<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="etName">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="textBody">
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="textTitle">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="textCaption">
        <item name="android:textSize">@dimen/caption</item>
    </style>

    <style name="ButtonRoundedAccent" extends="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_rounded_accent</item>
    </style>

    <style name="ButtonRoundedWhite" extends="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/btn_rounded_white</item>
    </style>
</resources>